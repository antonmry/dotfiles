[user]
	email = anton@galiglobal.com
	name = Anton Rodriguez

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true  # use n and N to move between diff sections
    light = true
    hyperlinks = true

[diff]
    tool = vimdiff

[merge]
    tool = "nvim"
    conflictStyle = zdiff3

[mergetool]
    keepBackup = false
    prompt = false

[mergetool "nvim"]
    cmd = "nvim -d -c \"wincmd l\" -c \"norm ]c\" \"$LOCAL\" \"$MERGED\" \"$REMOTE\""


[alias]
    a = add
    ap = add -p
    aA = add -A
    ss = status -s
    s = status
    c = commit
    co = checkout
    br = branch
    r = reset
    cp = cherry-pick
    gr = grep -Ii
    p = push
[pull]
	rebase = true
[init]
	defaultBranch = main
